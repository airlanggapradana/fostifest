{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "$schema": "https://openapi.vercel.sh/vercel.json",
      "framework": "vite",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "server/src/server.ts",
      "use": "@vercel/node",
      "$schema": "https://openapi.vercel.sh/vercel.json",
      "framework": null
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server/src/server.ts"
    },
    {
      "src": "/(.*)",
      "dest": "client/$1"
    }
  ]
}
